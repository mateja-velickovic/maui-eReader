<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="p_app_matvelickovic_readme.MainPage"
             BackgroundColor="#37323E">

    <ScrollView>
        <VerticalStackLayout>

            <Label
                Text="Read ME"
                Style="{StaticResource Headline}"
                Margin="0,30,0,0"
                FontFamily="Poppins"
                FontSize="50"/>
            
            <Label
                Text="Your book reader"
                Style="{StaticResource Headline}"
                FontSize="20"
                Margin="0,-25,0,0"
                FontAttributes="Italic"/>



                <SearchBar Placeholder="Faites votre recherche..."
                       Margin="-25,20,0,0"
                       WidthRequest="370"
                       PlaceholderColor="White"/>

            <Grid RowSpacing="5" ColumnSpacing="5" Margin="30, 50, 30, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Row="0" Grid.Column="0" Source="book_1.png" Aspect="AspectFill" />
                <Image Grid.Row="0" Grid.Column="1" Source="book_2.png" Aspect="AspectFill" />
                <Image Grid.Row="0" Grid.Column="2" Source="book_3.png" Aspect="AspectFill" />
                <Image Grid.Row="1" Grid.Column="0" Source="book_4.png" Aspect="AspectFill" />
                <Image Grid.Row="1" Grid.Column="1" Source="book_5.png" Aspect="AspectFill" />
                <Image Grid.Row="1" Grid.Column="2" Source="book_6.png" Aspect="AspectFill" /> <!--Opacity="0.5"-->
            </Grid>


            <Label
                Text="&lt;        1    2    3        >"
                Style="{StaticResource Headline}"
                FontSize="20"
                Margin="0,100,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
